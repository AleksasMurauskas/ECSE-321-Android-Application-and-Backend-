<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.mcgill.ecse321.driverapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity
            android:name=".LogInActivity"
            android:label="@string/title_activity_log_in"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateTripActivity"
            android:label="@string/title_activity_create_trip"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CreateVehicleActivity"
            android:label="@string/title_activity_create_vehicle"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".editDeleteTripActivity"
            android:label="@string/title_activity_edit_delete_trip"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MyTripsActivity"
            android:label="@string/title_activity_my_trips"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MyVehiclesActivity"
            android:label="@string/title_activity_my_vehicles"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".edit_tripActivity"
            android:label="@string/title_activity_edit_trip"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".editDeleteVehicleActivity"
            android:label="@string/title_activity_edit_delete_vehicle"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>