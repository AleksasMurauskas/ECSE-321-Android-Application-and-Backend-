<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_effect"
                android:layout_width="0dp"
                android:layout_height="117dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:scaleType="fitStart"
                android:src="@drawable/montreal" />

            <ImageView
                android:id="@+id/img_camera"
                android:layout_width="0dp"
                android:layout_height="117dp"
                android:layout_weight="1"
                android:scaleType="fitStart"
                android:src="@drawable/toronto" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:orientation="horizontal">

                <TextView
                    android:id="@+id/StartpointDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcap"
                    android:gravity="center_horizontal"
                    android:text="Montreal"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/Arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center_horizontal"
                    android:text="-->"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="20dp" />



                <TextView
                    android:id="@+id/DestinationDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcap"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:text="Toronto"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/DateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcap"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:text="Date:"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/DateDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcap"
                android:gravity="right"
                android:text="10/20/18"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/PickupTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcap"
                android:gravity="center_horizontal"
                android:text="Pickup Time:"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/TimeDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcap"
                android:gravity="center_horizontal"
                android:text="03:20:30"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="15dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TripDistanceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcap"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:text="Trip Distance:"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/LengthDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcap"
                android:gravity="right"
                android:text="1000"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/ArrivalTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcap"
                android:gravity="center_horizontal"
                android:text="Arrival Time:"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/ArrivalDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcap"
                android:gravity="center_horizontal"
                android:text="16:32:00"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="15dp" />


        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/DriverNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcap"
            android:gravity="left"
            android:layout_marginLeft="10dp"
            android:text="Driver Name:"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/DriverDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcap"
            android:gravity="right"
            android:text="Bob"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/VehicleNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcap"
            android:gravity="center_horizontal"
            android:text="Vehicle"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/VehicleDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcap"
            android:gravity="center_horizontal"
            android:text="Mini Cooper"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="15dp" />


    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/StopsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcap"
                android:gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:text="Stops Along the Way"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/PassengersTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcap"
                android:gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:text="Current Passengers"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="15dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:orientation="horizontal">

            <ListView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/StopsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

            <ListView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/PassengersList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                />



        </LinearLayout>

    </LinearLayout>





    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintWidth_percent="50" />


</android.support.constraint.ConstraintLayout>